{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "transphileOnly": true
      }
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
}
